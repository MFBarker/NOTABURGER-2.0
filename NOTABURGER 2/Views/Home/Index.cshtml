@{
    ViewData["Title"] = "NOTABURGER | HOME";
}


<!DOCTYPE html>
<html>
<head>


    <title>NOTABURGER | Home</title>
</head>



<div class="container-fluid divs divs3">
    <h1 class="text-center headers_"><a href="https://youtu.be/vEQww6AoSWo">NotABurger</a></h1>
    <div id="carouselExample" class="carousel slide carousel_shadow">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/NotABurgerGrassBurger.png" class="d-block w-100 img_homepage " alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/NewItemsHomepage.png" class="d-block w-100 img_homepage " alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/ScoutBurger.png" class="d-block w-100 img_homepage " alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
