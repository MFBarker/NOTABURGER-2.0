@{
}
@model List<ZipModel>
<div>
        <h3>zip code</h3>
        <form asp-controller="Zip" asp-action="GetZip">
            <h4>Country Abbreviation: </h4>
            <input type="text" id="txtCountry" name="CountryAbbreviation" />
            <h4>Zip Code</h4>
            <input type="text" id="txtZip" name="Zip" />
        </form>
    </div>
@if (Model != null && Model.Count > 0)
{
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Country</th>
                        <th>City</th>
                        <th>State</th>
                        <th>State Abbreviation</th>
                        <th>Longitude</th>
                        <th>Latitude</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model)
            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td>@Html.DisplayFor(modelItem => item.State)</td>
                                <td>@Html.DisplayFor(modelItem => item.StateAbbreviation)</td>
                                <td>@Html.DisplayFor(modelItem => item.Longitude)</td>
                                <td>@Html.DisplayFor(modelItem => item.Latitude)</td>
                            </tr>
            }
                </tbody>
            </table>
}